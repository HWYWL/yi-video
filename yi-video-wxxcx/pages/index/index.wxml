<view wx:for="{{videoList}}" class="item-container">  

    <view style='width:{{screenWidth}}px;height:210px;' class='back-img'> 
      <image src="{{serverUrl}}{{item.coverPath}}" style='width:{{screenWidth}}px;height:210px;' mode="aspectFill" bindtap='showVideoInfo'                     data-arrindex='{{index}}'></image>
    </view>

  <view class="desc">
      <view class="faceName">
          <image class='myface' src="{{serverUrl}}{{item.faceImage}}"></image>
          <view class="nickname">{{item.nickname}}</view>
      </view>
  </view>

</view>  